{% extends "base.html.twig" %}

{% block title %} {{ parent() }} Accueil {% endblock %}

{% block content %} 
<a href="index.php?page=addProduct" class="btn btn-primary">Ajouter un Produit</a>
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10">
                <h1 class="text-center">Liste des produits</h1> 
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Description</th>
                            <th>Prix</th>
                            <th>Type</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for produit in produits %}
                        <tr>
                            <td>{{ produit.getId() }}</td>
                            <td>{{ produit.getName() }}</td>
                            <td>{{ produit.getDescription() | raw}}</td>
                            <td>{{ produit.getPrice() }}</td>
                            <td>{{ produit.getType().getLabel() }}</td>
                            <td>
                                <a href="index.php?page=updateProduit&id={{ produit.getId() }}&name={{ produit.getName() }}&description={{ produit.getDescription() }}&price={{ produit.getPrice() }}&type.label={{ produit.getType().getLabel() }}" class="text-success"><i class="bi bi-pen-fill"></i></a>
                                <a href="index.php?page=deleteProduit&id={{ produit.getId() }}" class="text-danger"><i class="bi bi-trash2-fill"></i></a>
                                <a href="index.php?page=addReviewForm&id={{ produit.getId() }}" class="text-primary">Donnez votre avis sur ce produit</a>
                                <a href="index.php?page=viewReviews&id={{ produit.getId() }}" class="text-info">Lire les avis</a>
                                <a href="index.php?page=additem&productId={{ produit.id }}" class="text-success">Ajouter au Panier</a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
